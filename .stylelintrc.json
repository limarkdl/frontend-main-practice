{
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-tailwindcss"
  ],
  "rules": {
    "at-rule-no-unknown": null,
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "compose"
        ]
      }
    ],
    "block-no-empty": null,
    "unit-whitelist": ["em", "rem", "%", "s"]
  },
  "ignoreFiles": [
    "**/node_modules/**",
    "**/.next/**"
  ]
}